@page "/Calculate"

<form asp-action = "Calculate" method="post">

    <br>
    <h4>Метод расчета:</h4>
    <div>
        <label for="static_calc">по предельным усилиям:</label>
        <input asp-for=CalcType type="radio" id="static_calc" name="CalcType" value=0 checked />
        <br>
        <label for="ndm">по нелинейной деформационной модели:</label>
        <input asp-for=CalcType type="radio" id="ndm" name="CalcType" value=1 />
    </div>
    <br>

    <h5>Геометрические характеристики</h5>
    <p>Выберите тип сечения:</p>
    <div>
        <label for="section1">Прямоугольное:</label> 
        <input asp-for="SectionType" type="radio" id="Rectangle" name="SectionType" value="4" checked />
        <br>
        <div style="margin-left: 40px;">
            <label>Ширина:</label>
            <input asp-for="Width" type="number" step="0.01" value=30 required />

            <label>Высота:</label>
            <input asp-for="Height" type="number" step="0.01" value=60 required />
        </div>
        <br>        
        <label for="section2">Тавр T</label>
        <input asp-for="SectionType" type="radio" id="TBeam" name="SectionType" value="1" />
        &ndash;&ndash;
        <label for="section2">Тавр _L</label>
        <input asp-for="SectionType" type="radio" id="LBeam" name="SectionType" value="5" />
        &ndash;&ndash;
        <label for="section2">Двутавр</label>
        <input asp-for="SectionType" type="radio" id="IBeam" name="SectionType" value="2" />        
        <br>
        <p>
            <div style="margin-left: 40px;">
                <label>Нижняя полка  :</label>
                <label>bf:</label>
                <input asp-for="bf" type="number" step="0.01" value=30 required />
                <label>hf:</label>
                <input asp-for="hf" type="number" step="0.01" value=60 required />
            </div><br>
            <div style="margin-left: 40px;">
                <label>Стенка        :</label>
                <label>bw:</label>
                <input asp-for="bw" type="number" step="0.01" value=30 required />
                <label>hw:</label>
                <input asp-for="hw" type="number" step="0.01" value=60 required />
            </div><br>
            <div style="margin-left: 40px;">
                <label>Верхняя полка :  </label>
                <label>b1f:</label>
                <input asp-for="b1f" type="number" step="0.01" value=30 required />
                <label>h1f:</label>
                <input asp-for="h1f" type="number" step="0.01" value=60 required />
            </div>
        </p>
        <br>
        <label for="section3">Кольцевое сечение:</label>
        <input asp-for="SectionType" type="radio" id="Ring" name="SectionType" value="3" />        
        <div style="margin-left: 40px;">
            <label>Радиус внешний R2:</label>
            <input asp-for="R2" type="number" step="0.01" value=30 required />

            <label>Радиус внутренний R1:</label>
            <input asp-for="R1" type="number" step="0.01" value=60 required />
        </div>
    </div>
    <br>
    <br>
    <div>
    <label>Длина элемента, см :</label>
    <input asp-for="Length" type="number" step="0.01" value=30 required />
    </div>

    <br>
    <h6>Усилия</h6>
    <br>
    <div>
        <label>Момент My:</label>
        <input asp-for="My" type="number" step="0.01" value=1000 />
    
        <label>Продольная сила N:</label>
        <input asp-for="N" type="number" step="0.01" value=0 />
    
        <label>Поперечная сила Qx:</label>
        <input asp-for="Qx" type="number" step="0.01" value=0 />
    </div>
    <br>

    <br>
    <h6>Коэффициенты</h6>
    <br>
    <div>
        <div>
        <label>Yft:</label>
        <input asp-for="Yft" type="number" step="0.1" value=1.3 />

        <label>Yb:</label>
        <input asp-for="Yb" type="number" step="0.1" value=1.3 />
        </div>
        <br>
        <div>
        <label>Yb1:</label>
        <input asp-for="Yb1" type="number" step="0.1" value=0.9 />

        <label>Yb2:</label>
        <input asp-for="Yb2" type="number" step="0.1" value=0.9 />

        <label>Yb3:</label>
        <input asp-for="Yb3" type="number" step="0.1" value=0.9 />

        <label>Yb5:</label>
        <input asp-for="Yb5" type="number" step="0.1" value=0.9 />
        </div>
    </div>

    <h6>Характеристики бетона</h6>
    <br>
    
    <div>
        <label>Тип бетона:</label>
        <input asp-for="BetonType" type="text" list="options_betontype" value="Тяжелый" required />
        <datalist id="options_betontype">
            <option value="Тяжелый">Тяжелый</option>
            <option value="Мелкозернистый">Мелкозернистый</option>
            <option value="Легкий">Легкий</option>
        </datalist>
        <label>Индекс подкласса:</label>
        <input asp-for="BetonIndex" type="text" list="options_betonindex" value="a" required />
        <datalist id="options_betonindex">
            <option value="a">a</option>
            <option value="b">b</option>
            <option value="c">c</option>
            <option value="d">d</option>
            <option value="e">e</option>
        </datalist>
    </div>
    <br>
    
    
    <div>
        <label>Класс бетона на растяжение Bft3:</label>
        <input asp-for="Bft3" type="text" list="options_bft3"  value="B3i" required />
        <datalist id="options_bft3">
            <option value="B1i">B1i</option>
            <option value="B1,5i">B1,5i</option>
            <option value="B2i">B2i</option>
            <option value="B2,5i">B2,5i</option>
            <option value="B3i">B3i</option>
        </datalist>
    </div>
    <br>
    <div>
        <label>Класс бетона на растяжение Bft:</label>
        <input asp-for="Bft" type="text" list="options_bft" value="Bft3" required />
        <datalist id="options_bft">
            <option value="Bft1">Bft1</option>
            <option value="Bft1,5">Bft1,5</option>
            <option value="Bft2">Bft2</option>
            <option value="Bft2,5">Bft2,5</option>            
            <option value="Bft3">Bft3</option>
            <option value="Bft3,5">Bft3,5</option>
            <option value="Bft4">Bft4</option>
            <option value="Bft4,5">Bft4,5</option>
            <option value="Bft5">Bft5</option>
            <option value="Bft5,5">Bft5,5</option>
            <option value="Bft6">Bft6</option>            
        </datalist>

    </div>
    <br>
    <div>
        <label>Класс бетона на сжатие Bf:</label>
        <input asp-for="Bfb" type="text" list="options_bf" value="B30" required />
        <datalist id="options_bf">
            <option value="B12.5">B12.5</option>
            <option value="B15">B15</option>
            <option value="B20">B20</option>
            <option value="B25">B25</option>
            <option value="B30">B30</option>
            <option value="B35">B35</option>
            <option value="B40">B40</option>
        </datalist>
    </div>

    <h6>Модули упругости:</h6>

    <table>
        <tr>
            <td><label>Фибра Ef, кг/см2</label></td>
            <td><input asp-for=Ef type="number" step="1.0" value=2141404.0200 /></td>
        </tr>
        <tr>
            <td><label> Коэффициент армирования</label></td>
            <td><input asp-for=mu_fv type="number" step="0.1" value=0.0200 /></td>
        </tr>
        <tr>
            <td><label>Фибробетон растяжение Efb t, кг/см2</label></td>
            <td><input asp-for=Efbt type="number" step="1.0" value=367607.6901 /></td>
        </tr>
        <tr>
            <td><label>Бетон-матрица Eb, кг/см2</label></td>
            <td><input asp-for=Eb type="number" step="1.0" value=331407.7650 /></td>
        </tr>
    </table>
    <br>

    <br>
    <h6>Характеристики арматуры</h6>
    <br>
    <div>
        <div>
            <label>Модуль упругости арматуры:</label>
            <input asp-for="Es" type="number" step="0.1" value=2039432.40 />
        </div>
        <br>
        <div>
        <label>Класс aрматуры на растяжение:</label>
        <input asp-for="A_Rs" type="text" list="options3" value="A240" required />
        <datalist id="options3">
            <option value="A240">A240</option>
            <option value="A400">A400</option>
            <option value="A500">A500</option>
            <option value="A600">A600</option>
        </datalist>        
        <label>As:</label>
        <input asp-for="As" type="number" step="0.01" value="0" />
        <label>a:</label>
        <input asp-for="a_cm" type="number" step="0.01" value="0" />
        </div>
        <br>
        <div>
        <label>Класс aрматуры на сжатие:</label>
        <input asp-for="A_Rsc" type="text" list="options4" value="A240" required />
            <datalist id="options4">
                <option value="A240">A240</option>
                <option value="A400">A400</option>
                <option value="A500">A500</option>
                <option value="A600">A600</option>
            </datalist>        
        <label>A's:</label>
        <input asp-for="A1s" type="number" step="0.01" value="0" />
        <label>a':</label>
        <input asp-for="a1_cm" type="number" step="0.01" value="0" />
        </div>
    </div>

    <br>
    <button type="submit">Вычислить </button>
</form>


